## decompose a complex network into a simple, homogeneous network according to a heuristic


from py3plex.algorithms import *
from py3plex.core import multinet

multilayer_network = multinet.multi_layer_network("../datasets/epigenetics.gpickle",directed=True,input_type="gpickle_biomine")

## import status
multilayer_network.basic_stats() ## check core imports

# # c2 = ["movie_____features_____person_____acts_in_____movie"]
heuristic_list = ["idf","tf","chi","ig","gr","delta","rf","okapi"] ## refer to the HINMINE paper

for h in heuristic_list:
    dout= hinmine_decompose(multilayer_network,heuristic=h, cycle=None, parallel=True)
